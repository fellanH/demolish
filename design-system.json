{
  "designSystem": {
    "name": "Polar inspired Design System",
    "version": "1.0.0",
    "description": "A CSS-focused design system distilled from the style of the Polar.sh website, formatted for AI consumption.",
    "tokens": {
      "colors": {
        "primary": {
          "background": "#0f172a",
          "text": "#ffffff"
        },
        "secondary": {
          "background": "#f1f5f9",
          "text": "#64748b"
        },
        "accent": {
          "DEFAULT": "#3b82f6",
          "hover": "#2563eb"
        },
        "text": {
          "primary": "#ffffff",
          "secondary": "#94a3b8",
          "inverse": "#0f172a"
        },
        "border": {
          "DEFAULT": "#334155"
        },
        "utility": {
            "error": "#ef4444",
            "success": "#22c55e",
            "warning": "#f97316"
        }
      },
      "typography": {
        "fontFamily": {
          "sans": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
        },
        "fontSize": {
          "xs": "0.75rem",
          "sm": "0.875rem",
          "base": "1rem",
          "lg": "1.125rem",
          "xl": "1.25rem",
          "2xl": "1.5rem",
          "3xl": "1.875rem",
          "4xl": "2.25rem",
          "5xl": "3rem"
        },
        "fontWeight": {
          "normal": 400,
          "medium": 500,
          "semibold": 600,
          "bold": 700
        },
        "lineHeight": {
            "none": 1,
            "tight": 1.25,
            "snug": 1.375,
            "normal": 1.5,
            "relaxed": 1.625,
            "loose": 2
        }
      },
      "spacing": {
        "unit": "0.25rem",
        "scale": {
            "0": "0", "1": "0.25rem", "2": "0.5rem", "3": "0.75rem", "4": "1rem", "5": "1.25rem", "6": "1.5rem", "8": "2rem", "10": "2.5rem", "12": "3rem", "16": "4rem", "20": "5rem", "24": "6rem", "32": "8rem"
        }
      },
      "borderRadius": {
        "sm": "0.125rem",
        "DEFAULT": "0.25rem",
        "md": "0.375rem",
        "lg": "0.5rem",
        "xl": "0.75rem",
        "full": "9999px"
      },
      "boxShadow": {
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
        "DEFAULT": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
        "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
        "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)"
      }
    },
    "components": {
      "button": {
        "base": {
          "display": "inline-flex",
          "alignItems": "center",
          "justifyContent": "center",
          "borderRadius": "var(--borderRadius-md)",
          "fontWeight": "var(--fontWeight-semibold)",
          "padding": "var(--spacing-2) var(--spacing-4)",
          "fontSize": "var(--fontSize-sm)",
          "transition": "background-color 0.2s"
        },
        "variants": {
          "primary": {
            "backgroundColor": "var(--colors-accent-DEFAULT)",
            "color": "var(--colors-text-primary)",
            "hover": {
              "backgroundColor": "var(--colors-accent-hover)"
            }
          },
          "secondary": {
            "backgroundColor": "transparent",
            "color": "var(--colors-text-primary)",
            "border": "1px solid var(--colors-border-DEFAULT)",
             "hover": {
              "backgroundColor": "var(--colors-border-DEFAULT)"
            }
          }
        }
      },
      "input": {
        "base": {
          "display": "block",
          "width": "100%",
          "padding": "var(--spacing-2) var(--spacing-3)",
          "backgroundColor": "var(--colors-primary-background)",
          "border": "1px solid var(--colors-border-DEFAULT)",
          "borderRadius": "var(--borderRadius-md)",
          "color": "var(--colors-text-primary)",
          "fontSize": "var(--fontSize-sm)",
          "focus": {
            "outline": "2px solid transparent",
            "outlineOffset": "2px",
            "borderColor": "var(--colors-accent-DEFAULT)",
            "boxShadow": "0 0 0 2px var(--colors-accent-DEFAULT)"
          }
        }
      },
      "card": {
        "base": {
          "backgroundColor": "rgba(30, 41, 59, 0.5)",
          "borderRadius": "var(--borderRadius-lg)",
          "border": "1px solid var(--colors-border-DEFAULT)",
          "padding": "var(--spacing-6)",
          "boxShadow": "var(--boxShadow-lg)"
        }
      },
      "headings": {
          "h1": { "fontSize": "var(--fontSize-4xl)", "fontWeight": "var(--fontWeight-bold)" },
          "h2": { "fontSize": "var(--fontSize-3xl)", "fontWeight": "var(--fontWeight-bold)" },
          "h3": { "fontSize": "var(--fontSize-2xl)", "fontWeight": "var(--fontWeight-semibold)" },
          "h4": { "fontSize": "var(--fontSize-xl)", "fontWeight": "var(--fontWeight-semibold)" }
      },
      "body": {
          "base": {
              "color": "var(--colors-text-secondary)",
              "fontSize": "var(--fontSize-base)",
              "lineHeight": "var(--lineHeight-relaxed)"
          }
      }
    }
  }
}
